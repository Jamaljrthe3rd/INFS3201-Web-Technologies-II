{{#if message}}
<div>
    {{ message }}
</div>
{{/if}}

<h2>Volunteer Registration</h2>
<p>Join us in helping stray cats around Qatar</p>

<form method="post">
    <div>
        <label>Username:</label> 
        <input name="username" required>
    </div>

    <div>
        <label>Email:</label> 
        <input name="email" type="email" required>
        <small>We'll send verification details to this email</small>
    </div>

    <div>
        <label>Password:</label> 
        <input name="password" type="password" required>
    </div>

    <div>
        <label>Repeat Password:</label> 
        <input name="repeatPassword" type="password" required>
    </div>

    <button type="submit">Register as Volunteer</button>
</form>

<div>
    <p>Already a volunteer? <a href="/">Login</a></p>
</div>
