<h1>Feeding Sites</h1>

{{#if sites}}
    {{#each sites}}
        <div style="margin-bottom: 30px; border: 1px solid #ccc; padding: 15px;">
            <h2>{{this.name}}</h2>
            <p><strong>Location:</strong> {{this.location.coordinates.[1]}}, {{this.location.coordinates.[0]}}</p>
            <p>{{this.description}}</p>
            <p><strong>Status:</strong> Food: {{this.foodLevel}} | Water: {{this.waterLevel}} | Cats: {{this.catCount}}</p>
            <p><em>Last updated: {{this.lastVisit}}</em></p>
            
            <h3>Updates:</h3>
            {{#if this.posts}}
                {{#each this.posts}}
                    <div style="margin: 10px 0; padding: 10px; background: #f5f5f5;">
                        <strong>{{this.author}}</strong> - {{this.date}}
                        <p>{{this.content}}</p>
                        {{#if this.image}}
                            <img src="{{this.image}}" alt="Cat photo" style="max-width: 200px;">
                        {{/if}}
                    </div>
                {{/each}}
            {{else}}
                <p>No updates for this location yet.</p>
            {{/if}}
        </div>
    {{/each}}
{{else}}
    <p>No feeding sites found in your area.</p>
{{/if}}

{{#unless user}}
    <p><a href="/register">Sign up</a> to post updates about feeding sites!</p>
{{/unless}}
